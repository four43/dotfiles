{
	"required_api_version": "^2.0.0",
	"name": "Bitbucket Repo Opener",
	"description": "Bitbucket Repo Opener",
	"developer_name": "Seth Miller",
	"icon": "images/icon.png",
	"options": {
		"query_debounce": 0.5
	},
	"preferences": [
		{
			"id": "project_kw",
			"type": "keyword",
			"name": "Project Keyword",
			"description": "The prefix keyword to use to start searching for projects",
			"default_value": "bb"
		},
		{
			"id": "workspace",
			"type": "text",
			"name": "Workspace",
			"description": "The bitbucket workspace to use"
		},
		{
			"id": "username",
			"type": "text",
			"name": "Username",
			"description": "The app username (not email)"
		},
		{
			"id": "password",
			"type": "text",
			"name": "App Password",
			"description": "An app password to use"
		}
	]
}
